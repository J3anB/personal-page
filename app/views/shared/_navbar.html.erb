<div class="pos-f-t">
  <div class="collapse" id="navbarToggleExternalContent">
    <div class="bg-dark p-1">
      <h4 class="text-white">
        <div class="navbar">
          <div>
            <% if user_signed_in? %>
              <%= link_to 'home', home_path, class: "btn btn-outline-light" %>
              <%= link_to 'my contacts', contacts_path, class: "btn btn-outline-light" %>
              <%= link_to 'my cv', cv_cards_path, class: "btn btn-outline-light" %>
              <%= link_to 'my competences', cv_competences_path, class: "btn btn-outline-light" %>
              <%= link_to 'My chat', {controller: 'rooms'}, class: "btn btn-outline-light" %>
          <% end %>
          </div>
          <div>
            <i class="fas fa-cloud-sun"></i>
            <div class="badge badge-dark" id="weather_city"><%= weather.city %></div>
            <div class="badge badge-dark" id="weather_temperature"><%= weather.temperature %>Â°c</div>
            <div class="badge badge-dark" id="weather_humidity"><%= weather.humidity %>%</div>
            <div class="badge badge-dark" id="weather_description"><%= weather.description %></div>
            <button class="btn btn-sm btn-outline-light" id="weather_button" data-link="<%= weather_request_path %>">
              refresh
            </button>
            <button type="button" class="btn btn-sm btn-outline-light" data-toggle="modal" data-target="#exampleModal">
              weather history
            </button>
          </div>
          <div class="navbar-login">
            <% if user_signed_in? %>
              <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-light") %>
              <%= link_to('Edit registration', edit_user_registration_path, class: "btn btn-outline-light") %>
            <% else %>
              <%= link_to('Login', new_user_session_path, class: "btn btn-outline-light", "data-toggle": "modal", "data-target": "#exampleModalCenter") %>
              <%= link_to('Register', new_user_registration_path, class: "btn btn-outline-light") %>
            <% end %>
            <%= render "shared/cv_edit" %>
            <%= render "shared/cv_competence_new" %>

          </div>
        </div>
      </h4>
    </div>
  </div>
</div>
<nav class="navbar navbar-dark bg-dark" style="background-color: #212121;">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
</nav>

