<div class="login-card">
  <div class="card">
    <div class="card-body">
  <h2>Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "Enter email" %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
          <% end %>

          <div class="actions sign-up-button">
            <%= f.submit "Log in", class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
    </div>
  </div>
</div>