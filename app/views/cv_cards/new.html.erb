<h2>Curriculum vit√¶ edit</h2>

<%= form_with(scope: :cv_card, url: cv_card_create_path, local: true) do |form| %>


  <div class="cv-modal">
    <div class="form-group">
      <%= form.label :business %><br>
      <%= form.text_field :business, autofocus: true, autocomplete: "business", class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :job %><br>
      <%= form.text_field :job, autofocus: true, autocomplete: "job", class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :date %><br>
      <%= form.text_field :date, autofocus: true, autocomplete: "date", class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :competence %><br>
      <%= form.text_field :competence, autofocus: true, autocomplete: "competence", class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :competence_two %><br>
      <%= form.text_field :competence_two, autofocus: true, autocomplete: "competence", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :competence_three %><br>
      <%= form.text_field :competence_three, autofocus: true, autocomplete: "competence", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :competence_four %><br>
      <%= form.text_field :competence_four, autofocus: true, autocomplete: "competence", class: "form-control"%>
    </div>

    <div class="form-group">
      <%= form.label :competence_five %><br>
      <%= form.text_area :competence_five, autofocus: true, autocomplete: "competence", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :link %><br>
      <%= form.text_field :link, autofocus: true, autocomplete: "competence", class: "form-control" %>
    </div>



    <div class="custom-file">
      <%= form.file_field :file, class: "custom-file-input", id: "customFileLang" %>
      <%= form.label 'picture', class: "custom-file-label", for: "customFileLang" %>

    </div>

    <%= link_to 'Back', contacts_path, class: "btn-sm btn-outline-secondary" %>
    <%= link_to 'My contacts', {controller: 'contacts'}, class: "btn-sm btn-outline-secondary" %>
    <%= form.submit "Submit", class: "btn-sm btn-outline-secondary" %>

  </div>
<% end %>